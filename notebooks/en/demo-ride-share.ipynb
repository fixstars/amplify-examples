    "        ride_share_problem_out.clear_output()\n",
    "        ride_share_initialize(\n",
    "            alpha_slider.value,\n",
    "            C_slider.value,\n",
    "            people_slider.value,\n",
    "            car_slider.value,\n",
    "            time_slider.value,\n",
    "            _seed=None,\n",
    "        )\n",
    "        ride_share_result_out.clear_output()\n",
    "\n",
    "\n",
    "def show_ride_share_result(btn):\n",
